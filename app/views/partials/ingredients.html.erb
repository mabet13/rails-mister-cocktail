<h1 class="cocktail-color"><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |d| %>
  <h2 class="ingredient-color">
    <span class="ingredient-quantity"><%= d.description %></span>
    <%= d.ingredient.name %>
    <%= link_to :delete, dose_path(d, cocktail_id: params[:id]),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
  </h2>
<% end %>
